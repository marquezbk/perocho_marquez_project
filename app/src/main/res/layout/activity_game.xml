<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageButton
        android:id="@+id/ibtn_pause"
        android:background="@drawable/button_pause"
        android:layout_margin="@dimen/margin_medium"
        style="@style/squareButtonStyle"/>

    <TextView
        android:id="@+id/txt_score"
        android:text="SCORE"
        android:layout_marginBottom="@dimen/margin_medium"
        style="@style/largeTextStyle" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/btn_play_0"
            style="@style/playerButtonStyle"/>
        <ImageButton
            android:id="@+id/btn_play_1"
            style="@style/playerButtonStyle"/>
        <ImageButton
            android:id="@+id/btn_play_2"
            style="@style/playerButtonStyle"/>
        <ImageButton
            android:id="@+id/btn_play_3"
            style="@style/playerButtonStyle"
            android:layout_column="0"
            android:layout_row="1"/>
        <ImageButton
            android:id="@+id/btn_play_4"
            style="@style/playerButtonStyle"/>
        <ImageButton
            android:id="@+id/btn_play_5"
            style="@style/playerButtonStyle"/>
        <ImageButton
            android:id="@+id/btn_play_6"
            style="@style/playerButtonStyle"
            android:layout_column="0"
            android:layout_row="2"/>
        <ImageButton
            android:id="@+id/btn_play_7"
            style="@style/playerButtonStyle"/>
        <ImageButton
            android:id="@+id/btn_play_8"
            style="@style/playerButtonStyle"/>
    </GridLayout>

    <TextView
        android:id="@+id/txt_info"
        android:text="@string/info_copy_pattern"
        android:layout_marginVertical="@dimen/margin_small"
        style="@style/normalTextStyle"/>

    <Button
        android:id="@+id/btn_start"
        android:text="@string/start"
        style="@style/longButtonStyle"/>
</LinearLayout>